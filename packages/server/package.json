{
  "name": "@osmoscraft/osmosnote",
  "version": "1.0.0-alpha.14",
  "description": "",
  "main": "main.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "npm-run-all --print-label -p dev:*",
    "dev:client": "tsc -p public --watch",
    "dev:server": "ts-node-dev --inspect=4321 --respawn --transpile-only src/main.ts",
    "serve": "node main.js",
    "build": "npm-run-all --print-label -p build:* -s pack:docker",
    "build:server": "node scripts/build-server.js",
    "build:client": "node scripts/build-client.js",
    "pack:docker": "docker build -t osmoscraft/osmosnote:latest .",
    "clean": "npm-run-all --print-label -p clean:*",
    "clean:server": "rm -rf dist && rm -rf bin",
    "clean:client": "rm -rf public/dist"
  },
  "bin": {
    "osmosnote": "main.js"
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "public/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osmoscraft/osmosnote.git"
  },
  "keywords": [],
  "author": "osmoscraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/osmoscraft/osmosnote/issues"
  },
  "homepage": "https://github.com/osmoscraft/osmosnote#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "dotenv": "^10.0.0",
    "fastify": "^3.20.2",
    "fastify-static": "^4.2.3",
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.7.10",
    "axios": "^0.24.0",
    "esbuild": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  }
}
