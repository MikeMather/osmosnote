{
  "name": "@system-two/server",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "main": "dist/main.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "npm-run-all --print-label -p dev:*",
    "dev:client": "tsc -p public --watch",
    "dev:server": "ts-node-dev --inspect=4321 --respawn --transpile-only src/main.ts",
    "serve": "node dist/main.js",
    "build": "npm-run-all --print-label -p build:* -s pack:docker",
    "build:server": "node scripts/build-server.js",
    "build:client": "node scripts/build-client.js",
    "pack:docker": "docker build .",
    "pack:node": "pkg ./dist/main.js -c package.json -t latest-linux-x64 -o ./bin/s2",
    "clean": "npm-run-all --print-label -p clean:*",
    "clean:server": "rm -rf dist && rm -rf bin",
    "clean:client": "rm -rf dist && rm -rf bin"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "public/**/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platojar/system-two.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/platojar/system-two/issues"
  },
  "homepage": "https://github.com/platojar/system-two#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.5",
    "fastify": "^3.9.1",
    "fastify-static": "^3.3.0",
    "fs-extra": "^9.0.1",
    "js-yaml": "^3.14.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.4",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.14.10",
    "esbuild": "^0.11.12",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.9",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  }
}
