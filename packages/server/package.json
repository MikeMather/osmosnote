{
  "name": "@osmoscraft/osmosnote",
  "version": "1.0.0-alpha.17",
  "description": "",
  "main": "main.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "npm-run-all --print-label -p dev:*",
    "dev:client": "node scripts/build-client.js --watch",
    "dev:server": "tsx watch --clear-screen=false src/main.ts",
    "serve": "node main.js",
    "build": "npm-run-all --print-label -p build:* -s pack:docker",
    "build:server": "node scripts/build-server.js",
    "build:client": "node scripts/build-client.js",
    "pack:docker": "docker build -t osmoscraft/osmosnote:latest .",
    "clean": "npm-run-all --print-label -p clean:*",
    "clean:server": "rm -rf dist && rm -rf bin",
    "clean:client": "rm -rf public/dist"
  },
  "bin": {
    "osmosnote": "main.js"
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "public/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osmoscraft/osmosnote.git"
  },
  "keywords": [],
  "author": "osmoscraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/osmoscraft/osmosnote/issues"
  },
  "homepage": "https://github.com/osmoscraft/osmosnote#readme",
  "dependencies": {
    "@fastify/static": "^6.4.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.0.1",
    "fastify": "^4.2.0",
    "fs-extra": "^10.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.41",
    "axios": "^0.27.2",
    "esbuild": "^0.14.47",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
