{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ]
}