{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tsx": "^3.6.0"
  },
  "scripts": {
    "start": "npm-run-all -p dev:*",
    "serve": "npm-run-all -p serve:*",
    "clean": "npm-run-all -p clean:*",
    "build": "npm-run-all -p clean:* -p build:*",
    "release": "node packages/scripts/release.js",
    "clean:server": "npm run clean --prefix packages/server",
    "dev:server": "npm run dev --prefix packages/server",
    "build:server": "npm run build --prefix packages/server",
    "serve:server": "npm run serve --prefix packages/server"
  },
  "workspaces": [
    "packages/*"
  ]
}
