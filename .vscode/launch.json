{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to dev:debug",
      "protocol": "inspector",
      "port": 4321,
      "restart": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug compiler unit tests",
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}/packages/compiler",
      "args": ["${workspaceRoot}/node_modules/jasmine/bin/jasmine"],
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/packages/compiler/package.json"
      }
      // "args": ["${file}"]
    }
  ]
}